<%- include('partials/header') %>
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h2 class="h1 display-4"><%= tag.name %></h2>
</div>

<div class="card-deck row mb-3 text-center">
    <% if(tag.quizzes.length === 0)  {%>
        <h3>Aucun quizz associé à ce thème</h3>
    <% } else { %>
        <% for(const quiz of tag.quizzes) {%>
            <div class="col-4 d-flex flex-column">
                <div class="card mb-4 shadow-sm d-flex flex-column">
                    <div class="card-header">
                        <h3 class="h4 my-0 font-weight-normal"><%= quiz.title %></h3>
                    </div>
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h4 class="h5 card-title pricing-card-title"><%= quiz.description %></h4>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>✍️ <%= quiz.author.fullname %></li>
                        </ul>
                        <a href="/quiz/<%= quiz.id %>" class="btn btn-lg btn-block btn-primary text-white">Jouer</a>
                    </div>
                </div>
            </div>
        <% } %> 
    <% } %>  
</div>
<%- include('partials/footer') %>
